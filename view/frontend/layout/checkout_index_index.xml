<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src_type="url" src="https://geowidget.easypack24.net/css/easypack.css"/>
        <script src_type="url" src="https://geowidget.easypack24.net/js/sdk-for-javascript.js"/>
    </head>
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="shippingAddress" xsi:type="array">
                                                    <item name="config" xsi:type="array">
                                                        <item name="shippingMethodItemTemplate" xsi:type="string">InPost_Shipment/shipping-address/custom-method-item-template</item>
                                                        <item name="shippingMethodListTemplate" xsi:type="string">InPost_Shipment/shipping-address/custom-method-list-template</item>
                                                    </item>
                                                    <item name="children" xsi:type="array">
                                                        <item name="inpostForm" xsi:type="array">
                                                            <item name="component" xsi:type="string">inpostForm</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="displayArea" xsi:type="string">inpostForm</item>
                                                            </item>

                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
